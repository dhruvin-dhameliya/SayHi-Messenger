<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginTop="8dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_175sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/square_img_show_story"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_175sdp"
                android:layout_gravity="center"
                android:background="@color/black"
                android:foregroundGravity="center"
                android:scaleType="center"
                android:src="@drawable/img_story_2"
                app:riv_corner_radius="@dimen/_8sdp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/status_outer_img_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:padding="3dp"
                android:src="@mipmap/ic_launcher" />

            <com.devlomi.circularstatusview.CircularStatusView
                android:id="@+id/circular_status_view_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:portion_color="@color/white"
                app:portion_spacing="4dp"
                app:portion_width="1.8dp"
                app:portions_count="8" />

            <TextView
                android:id="@+id/txt_set_story_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="85dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="User name"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</RelativeLayout>