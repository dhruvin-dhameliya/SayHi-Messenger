<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".wallPaper.Default_Wallpaper_Preview_Activity">

    <LinearLayout
        android:id="@+id/default_preview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_default_screen_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/img_back_arow"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Preview"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/default_wallpaper_set_preaview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/default_preview_toolbar"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/default_image_for_chat" />

    <LinearLayout
        android:id="@+id/receiver_wallpaper_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/default_preview_toolbar"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/opposite_msg_background"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="This is default Say Hi wallpaper"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="12:01 am"
                android:textAlignment="textEnd"
                android:textColor="#A1A5B7"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sender_wallpaper_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receiver_wallpaper_msg"
        android:layout_gravity="center"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/my_msg_background"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="Set a custom wallpaper for this chat"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="12:01 am"
                android:textAlignment="textEnd"
                android:textColor="#EBECF0"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wallpaper_card_bg"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/btn_default_wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/wallpaper_text_border"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_31sdp"
            android:paddingEnd="@dimen/_31sdp"
            android:text="Set wallpaper"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>