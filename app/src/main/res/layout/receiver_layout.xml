<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/opponent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opponent_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opposite_msg_background"
                android:padding="@dimen/_8sdp"
                android:text="This is opponent message"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/opponent_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01-01-2023 9:10 AM"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>