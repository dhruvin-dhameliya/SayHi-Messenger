<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/opponent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opponent_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/opposite_msg_background"
                android:padding="@dimen/_8sdp"
                android:text="This is opponent message"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/opponent_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="01-01-2023 9:10 AM"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opponent_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/my_msg_background"
                android:padding="@dimen/_8sdp"
                android:text="This is my message"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/my_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="01-01-2023 9:15 AM"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>