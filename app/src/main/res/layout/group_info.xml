<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_101sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/group_info_inside_banner" />

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupIconIv"
            android:layout_width="@dimen/_101sdp"
            android:layout_height="@dimen/_101sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/img_default_person" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Contact Name"
                android:textColor="#1f2c34"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/editGroupTv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@drawable/icon_draw"
                app:backgroundTint="#1f2c34" />

        </RelativeLayout>

        <TextView
            android:id="@+id/createdBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Created by"
            android:textColor="#1f2c34"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/participantaddTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_section"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_31sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@drawable/icon_chat_out_fill"
                android:backgroundTint="#1f2c34" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="51dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:text="Send message"
                android:textColor="#1f2c34"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />

        </RelativeLayout>

        <View
            android:id="@+id/view_border"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/jump_chat_section"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#b6b6b6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jump_add_participent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participantaddTv"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@drawable/icon_user_add"
                android:backgroundTint="#1f2c34" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="51dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="start"
                android:text="Add participants"
                android:textColor="#1f2c34"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/jump_chat_section"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#b6b6b6" />

    </LinearLayout>

    <TextView
        android:id="@+id/participantTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jump_add_participent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="start"
        android:text="3 PARTICIPANTS"
        android:textColor="#808080"
        android:textSize="12sp"
        android:textStyle="normal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participantsRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participantTv"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_participant_add_2" />

    <LinearLayout
        android:id="@+id/leaveGroupTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participantsRv"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/jump_chat_section"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#b6b6b6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="start"
            android:text="Leave"
            android:textColor="#FF5722"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>