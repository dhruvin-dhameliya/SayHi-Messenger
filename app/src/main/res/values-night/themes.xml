        <item name="colorPrimary">#0076CE</item>
        <item name="colorPrimaryVariant">#0071C6</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
